#!/usr/bin/env python3
"""
ULTRA-SIMPLE BUTTON TEST
Connect button between GPIO14 and 3.3V
"""

from gpiozero import Button, LED
import time

# Create button with NO pull-up/down
button = Button(14, pull_up=None)
led = LED(15)  # Simple test LED

print("Testing button connection...")
print("Button should connect GPIO14 to 3.3V")
print("Press button to blink LED, Ctrl+C to quit")

led.on()

try:
    while True:
        if button.is_pressed:
            print("âœ“ Button PRESSED")
            led.off()
            time.sleep(0.2)
            led.on()
            # Wait for button release
            while button.is_pressed:
                time.sleep(0.01)
            print("Button released")
        time.sleep(0.05)
except KeyboardInterrupt:
    led.off()
    print("\nTest complete")
