#!/usr/bin/env python3
"""
Button Debug Test
"""
import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BCM)
GPIO.setup(14, GPIO.IN)  # No pull-up/down

print("Testing GPIO14...")
print("Press button (connect to 3.3V) or Ctrl+C to quit")
print("Reading value every second:")

try:
    while True:
        value = GPIO.input(14)
        print(f"GPIO14 value: {value} (1=3.3V, 0=GND/floating)")
        
        # Also test with internal pull-down
        GPIO.setup(14, GPIO.IN, pull_up_down=GPIO.PUD_DOWN)
        value2 = GPIO.input(14)
        print(f"With pull-down: {value2}")
        
        GPIO.setup(14, GPIO.IN, pull_up_down=GPIO.PUD_UP)
        value3 = GPIO.input(14)
        print(f"With pull-up: {value3}")
        
        print("-" * 30)
        time.sleep(1)
        
        # Reset to no pull
        GPIO.setup(14, GPIO.IN)
        
except KeyboardInterrupt:
    GPIO.cleanup()
    print("\nDone")
